<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlueTextInputLayout" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">#3f4655</item>
    </style>


    <style name="EditText.Black" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/amber_900</item>
        <item name="colorControlHighlight">@color/amber_900</item>
        <item name="colorControlNormal">@color/grey_60</item>
    </style>


    <style name="EditText.Black.Hint" parent="@style/EditText.Black">
        <item name="colorAccent">@color/black_material</item>
        <item name="android:textColorHint">@color/black_material</item>
    </style>

</resources>