<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cartimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cartitemname"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:ems="30"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:text="TextVsdfsd ssdfsdfsd sdfsdsfsd sdifhsdf sdfjsdof sdfois df sdfoijdfsiew"
            app:layout_constraintStart_toEndOf="@+id/cartimg"
            app:layout_constraintTop_toTopOf="@+id/cartimg" />

        <TextView
            android:id="@+id/cartitemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="0 BDT"
            android:textColor="@color/red"
            app:layout_constraintStart_toEndOf="@+id/cartimg"
            app:layout_constraintTop_toBottomOf="@+id/cartitemname" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/cartitemprice"
            app:layout_constraintTop_toBottomOf="@+id/cartitemprice">

            <RadioButton
                android:id="@+id/small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S" />

            <RadioButton
                android:id="@+id/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M" />

            <RadioButton
                android:id="@+id/large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L" />

            <RadioButton
                android:id="@+id/extralarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL" />

        </RadioGroup>

        <TextView
            android:id="@+id/cartquantity"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:text="00"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/cartitemprice"
            app:layout_constraintStart_toEndOf="@+id/cartminus"
            app:layout_constraintTop_toTopOf="@+id/cartitemprice" />

        <ImageView
            android:id="@+id/cartminus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_remove"
            app:layout_constraintBottom_toBottomOf="@+id/cartquantity"
            app:layout_constraintStart_toEndOf="@+id/cartitemprice"
            app:layout_constraintTop_toTopOf="@+id/cartquantity" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/cartplus"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_add_black"
            app:layout_constraintBottom_toBottomOf="@+id/cartquantity"
            app:layout_constraintStart_toEndOf="@+id/cartquantity"
            app:layout_constraintTop_toTopOf="@+id/cartquantity" />

        <ImageView
            android:id="@+id/deletecartitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>